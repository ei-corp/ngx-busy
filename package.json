{
  "name": "angular-opensource",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "transpile": "ngc",
    "start": "ng build ng-busy && ng serve",
    "prebuild": "rimraf ./dist/ng-busy",
    "build": "ng build ng-busy --configuration production",
    "postbuild": "lessc ./projects/ng-busy/src/lib/style/busy.less ./dist/ng-busy/src/style/busy.css",
    "publish": "npm run build && npm publish ./dist/ng-busy",

    "minify": "uglifyjs dist/ng-busy/ng-busy.umd.js --compress --mangle --comments --output dist/ng-busy/ng-busy.umd.min.js",
    "build-new": "npm run transpile && npm run package && npm run minify",
    "pack": "rimraf -g ./*.tgz && npm pack ./dist"
  },
  "dependencies": {
    "@angular/animations": "^18.0.4",
    "@angular/cdk": "^18.0.4",
    "@angular/common": "^18.0.4",
    "@angular/compiler": "^18.0.4",
    "@angular/core": "^18.0.4",
    "@angular/forms": "^18.0.4",
    "@angular/material": "^18.0.4",
    "@angular/platform-browser": "^18.0.4",
    "@angular/platform-browser-dynamic": "^18.0.4",
    "@angular/router": "^18.0.4",
    "code-prettify": "^0.1.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.5",
    "@angular-devkit/core": "18.0.5",
    "@angular/cli": "18.0.5",
    "@angular/compiler-cli": "^18.0.4",
    "@angular/language-service": "^18.0.4",
    "@types/jasmine": "~3.6.1",
    "@types/jasminewd2": "~2.0.6",
    "@types/node": "^14.14.7",
    "codelyzer": "^6.0.2",
    "jasmine-core": "~3.8.0",
    "jasmine-spec-reporter": "~6.0.0",
    "karma": "~6.3.12",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.5.0",
    "less": "^4.1.3",
    "lessc": "^1.0.2",
    "ng-packagr": "^18.0.0",
    "protractor": "~7.0.0",
    "rimraf": "^5.0.1",
    "ts-node": "~9.0.0",
    "tslint": "~6.1.3",
    "typescript": "^5.2.2",
    "uglifyjs": "2.4.11"
  }
}
